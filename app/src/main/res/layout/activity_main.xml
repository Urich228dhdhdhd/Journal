<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#dbe6f4"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100sp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:elevation="25dp"
        android:orientation="vertical"
        android:background="@drawable/main_shape_of_registration"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="@string/name_kollege"
            android:textColor="#617492"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="@string/name_project"
            android:textColor="#617492"
            android:textSize="16sp"
            tools:layout_editor_absoluteY="65dp" />
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_fliper">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="40dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp"
                        android:inputType="text"
                        android:drawableLeft="@drawable/baseline_login_24"
                        android:drawablePadding="10dp"
                        android:textColor="#617492"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/main_shape_of_registration_logandpass"
                        android:hint="Логин"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:minHeight="50dp"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"

                        android:layout_marginBottom="10dp"
                        android:background="@drawable/main_shape_of_registration_logandpass"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_password_24"
                        android:drawablePadding="10dp"
                        android:textColor="#617492"
                        android:fontFamily="@font/rubik"
                        android:hint="Пароль"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Регистрация"
                        android:textSize="15dp"

                        android:backgroundTint="#4f6384"
                        android:textColor="#ffffff"
                        android:minHeight="55dp"
                        android:fontFamily="@font/rubik"


                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="У меня есть аккаунт"
                        android:id="@+id/dontnext"
                        android:backgroundTint="#ffffff"
                        android:textColor="#617492"
                        android:minHeight="55dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/rubik"
                        />
                  
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="40dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp"
                        android:inputType="text"
                        android:drawableLeft="@drawable/baseline_login_24"
                        android:drawablePadding="10dp"
                        android:textColor="#617492"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/main_shape_of_registration_logandpass"
                        android:hint="Логин"

                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:minHeight="50dp"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"

                        android:layout_marginBottom="10dp"
                        android:background="@drawable/main_shape_of_registration_logandpass"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_password_24"
                        android:drawablePadding="10dp"
                        android:textColor="#617492"
                        android:fontFamily="@font/rubik"
                        android:hint="Пароль"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Войти"
                        android:textSize="15dp"

                        android:backgroundTint="#4f6384"
                        android:textColor="#ffffff"
                        android:minHeight="55dp"
                        android:fontFamily="@font/rubik"


                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Регистрация"
                        android:id="@+id/next"
                        android:backgroundTint="#ffffff"
                        android:textColor="#617492"
                        android:minHeight="55dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/rubik"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Забыли пароль?"
                        android:textColor="#a3abbb"
                        android:textSize="12sp"
                        android:fontFamily="@font/rubik_light"
                        android:paddingTop="40dp"/>
                </LinearLayout>


            </LinearLayout>





        </ViewFlipper>







    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#617492"
                android:fontFamily="@font/rubik_medium"
                android:text="Сайт колледжа"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
            android:textColor="#617492"
                android:fontFamily="@font/rubik_medium"
                android:text="Сообщить об ошибке"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:fontFamily="@font/rubik_light"
            android:gravity="center"

            android:text="@string/name_buttom"
            android:textSize="12sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
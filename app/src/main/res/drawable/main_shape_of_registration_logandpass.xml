<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние при фокусе -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Цвет фона при фокусе -->
            <stroke
                android:width="2dp"
                android:color="#4E6384"/> <!-- Цвет и ширина обводки при фокусе -->
            <corners android:radius="30dp"/> <!-- Радиус углов -->
        </shape>
    </item>

    <!-- Состояние при нажатии -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Цвет фона при нажатии -->
            <stroke
                android:width="2dp"
                android:color="#4E6384"/> <!-- Цвет и ширина обводки при нажатии -->
            <corners android:radius="30dp"/> <!-- Радиус углов -->
        </shape>
    </item>

    <!-- Состояние по умолчанию -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#c5d2e2"/> <!-- Цвет фона по умолчанию -->
            <corners android:radius="30dp"/> <!-- Радиус углов -->
        </shape>
    </item>
</selector>
